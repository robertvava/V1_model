{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEST",
  "run": {
    "tstart": 0.0,
    "tstop": 3000.0,
    "dt": 0.001
  },
  
  "inputs": {
    "LGN_spikes": {
      "input_type": "spikes",
      "module": "h5",
      "input_file": "$BASE_DIR/lgn_spikes.h5",
      "node_set": "LGN"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5",
    "quiet_simulator": true
  },
  "reports": {
    "membrane_potential": {
      "cells": {
        "population": "V1",
        "node_id": [0, 80, 100]
      },
      "variable_name": "V_m",
      "module": "multimeter_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json"
}